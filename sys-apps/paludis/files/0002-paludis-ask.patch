+{
+    if (count<max_count>() == 0)
+        return true;
+    std::string answer;
+    output_endl();
+    output_starred_item_no_endl("Do you really want to do this ? [Y/n] ... ");
+    while (true)
+    {
+        getline(std::cin, answer);
+        for (int i(0) ; i < answer.length() ; ++i)
+            answer[i] = tolower(answer[i]);
